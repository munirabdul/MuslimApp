<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/mosque"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_jadwal_sholat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal Sholat"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_produk_halal"
        android:textAllCaps="false"
        android:text="Produk Halal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_doa_harian"
        android:textAllCaps="false"
        android:text="Doa Harian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Abdul Munir (311620802) TI.16.D.6"
        android:paddingTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="STT Pelita Bangsa - Bekasi"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="&#169;2019"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>